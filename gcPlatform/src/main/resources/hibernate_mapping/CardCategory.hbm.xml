<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ethan.java.spring.gcPlatform.model.card">
	<class name="CardCategory" table="tb_cardcategory">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="name" not-null="true" length="50"/>
		<!--  
		<property name="level"/>
		-->
		<!-- 映射包含的商品集合 -->
		<set name="cards" inverse="true" lazy="extra">
			<key column="categoryId"/>
			<one-to-many class="CardsInfo" />
		</set>
		<!-- 映射父节点 -->
		<!--  
		<many-to-one name="parent" column="pid"/>
		-->
		<!-- 映射子节点 -->
		<!--  
		<set name="children" inverse="true" lazy="extra" cascade="all" order-by="id">
			<key column="pid"/>
			<one-to-many class="ProductCategory"/>
		</set>
		-->
	</class>
</hibernate-mapping>